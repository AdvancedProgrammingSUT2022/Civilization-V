<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Polygon?>

<Pane fx:id="content" prefHeight="750.0" prefWidth="1500.0" styleClass="backGroundMain" stylesheets="/Css/styles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.GraphicViewController.MainPageController">
    <Button layoutX="1380.0" layoutY="24.0" onMouseClicked="#logout" onMouseEntered="#buttonSizeIncrease" onMouseExited="#buttonSizeDecrease" styleClass="buttons" text="Logout" />
   <VBox alignment="CENTER" layoutX="532.0" layoutY="159.0" prefHeight="411.0" prefWidth="436.0" styleClass="border">
      <children>
         <VBox alignment="CENTER" prefHeight="294.0" prefWidth="364.0" spacing="10">
            <children>
               <HBox alignment="CENTER" prefHeight="56.0" prefWidth="311.0" spacing="8">
                  <children>
                     <Label prefHeight="51.0" prefWidth="179.0" styleClass="loginFont" text="Number of players:" />
                     <Polygon fill="DODGERBLUE" points="2.0, -9.0, -8.0, -22.0, 2.0, -35.0" stroke="BLACK" strokeType="INSIDE" onMouseClicked="#decreasePlayer"/>
                     <Label fx:id="playerNum" styleClass="loginFont" text="2" />
                     <Polygon fill="DODGERBLUE" points="2.0, -9.0, 12.0, -22.0, 2.0, -35.0" stroke="BLACK" strokeType="INSIDE" onMouseClicked="#increasePlayer"/>
                  </children>
               </HBox>
               <Label styleClass="loginFont" text="Send Invite:" />
               <HBox alignment="CENTER" prefHeight="51.0" prefWidth="236.0" spacing="7">
                  <children>
                     <TextField prefHeight="31.0" prefWidth="183.0" promptText="Enter player's Username" styleClass="textFields" />
                     <Button mnemonicParsing="false" onMouseEntered="#buttonSizeIncrease" onMouseExited="#buttonSizeDecrease" styleClass="buttons" text="Send" />
                  </children>
               </HBox>
               <Label id="error" text="error" visible="false" />
               <Label />
            </children>
         </VBox>
         <HBox alignment="CENTER" prefHeight="92.0" prefWidth="364.0" spacing="10">
            <children>
               <Button mnemonicParsing="false" onMouseEntered="#buttonSizeIncrease" onMouseExited="#buttonSizeDecrease" styleClass="buttons" text="Play Game" />
               <Button mnemonicParsing="false" onMouseEntered="#buttonSizeIncrease" onMouseExited="#buttonSizeDecrease" styleClass="buttons" text="ScoreBoard" onMouseClicked="#scoreBoard"/>
               <Button mnemonicParsing="false" onMouseEntered="#buttonSizeIncrease" onMouseExited="#buttonSizeDecrease" styleClass="buttons" text="Profile Menu" onMouseClicked="#profile"/>
            </children>
         </HBox>
      </children>
   </VBox>
   <Label fx:id="menuName" styleClass="loginFont" />
</Pane>
