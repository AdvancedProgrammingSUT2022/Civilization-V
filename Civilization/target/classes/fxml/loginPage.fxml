<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Pane fx:id="content" prefHeight="750.0" prefWidth="1500.0" styleClass="backGroundLogin" stylesheets="/Css/styles.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.GraphicViewController.LoginPageController">

   <VBox layoutX="500" layoutY="200" prefWidth="500" spacing="10" alignment="CENTER" >
      <Text fx:id="welcome" layoutX="520" layoutY="260" styleClass="welcome" text="Welcome! Login or register" textAlignment="CENTER"/>
      <Label styleClass="loginFont" text="Username" textAlignment="LEFT"/>
      <TextField fx:id="username" promptText="Enter your username:" styleClass="textFields" />
      <Label styleClass="loginFont" text="Password" />
      <PasswordField fx:id="password" promptText="Enter your password:" styleClass="textFields" />
      <Label styleClass="loginFont" text="Nickname" />
      <TextField fx:id="nickname" promptText="Enter your nickname for registration:" styleClass="textFields" />
      <HBox alignment="CENTER" spacing="15">
         <Button onMouseEntered="#buttonSizeIncrease" onMouseExited="#buttonSizeDecrease" styleClass="buttons" text="register" onMouseClicked="#register"/>
         <Button onMouseEntered="#buttonSizeIncrease" onMouseExited="#buttonSizeDecrease" styleClass="buttons" text="login" onMouseClicked="#login"/>
      </HBox>
      <Label fx:id="error" text="" visible="false" styleClass="errors"/>
   </VBox>
   <Label fx:id="menuName" styleClass="loginFont" />
</Pane>
